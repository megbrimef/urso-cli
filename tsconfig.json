{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "lib": ["ES6", "es2015", "dom", "ES2021"],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "bin",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"]
}